<Window x:Class="ValidationComparer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ValidationComparer"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <DockPanel LastChildFill="True">
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_Файл" FontSize="14">
                <MenuItem Header="Загрузить результат проверки" Name="LoadValidationResult" Click="LoadValidationResult_Click"/>
                <Separator/>
                <MenuItem Header="Выход"/>
            </MenuItem>
        </Menu>
        <StatusBar DockPanel.Dock="Bottom" Height="20">
            <StatusBarItem Content="Ready">
                
            </StatusBarItem>
        </StatusBar>
        <Grid DockPanel.Dock="Top">
        </Grid>
    </DockPanel>
</Window>
